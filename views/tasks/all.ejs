
<%- include('../layouts/main'); %>
<div class="container">
    <h1>Todas as Tasks</h1>
<ul class="task-list">
    <% tasks.forEach(function(task){ %>
        <% if(task.done == 1){ %>
            <li><a href="/" class="title done"><%=task.title%></a>
            <% } else { %>
                <li><a href="/" class="title"><%=task.title%></a>
            <% } %>
        

            <div class="actions">
                <form action="/tasks/done/id" method="post">
                    <input type="hidden" name="id" value="<%=task.id%>">
                    <input type="hidden" name="done" value="<%=task.done%>">
                    <button type="submit">
                        <i class="bi bi-check"></i>
                    </button>
                </form>

                <a  href="/tasks/edit/<%=task.id%>"><i class="bi bi-pencil-square"></i></a>

                </form>
                <form action="/tasks/remove" method="post">
                    <input type="hidden" name="id" value="<%=task.id%>">
                    <button type="submit">
                        <i class="bi bi-x"></i>
                    </button>
                </form>

            </div>
        </li>
      <% }); %>
</ul>
</div>
